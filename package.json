{
  "name": "nestjs-trpc-workspace",
  "version": "1.6.2",
  "homepage": "https://nestjs-trpc.io",
  "private": true,
  "scripts": {
    "build": "tsc -b -v packages",
    "changelog": "lerna-changelog",
    "clean": "tsc -b --clean",
    "format": "prettier packages/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "test": "pnpm -r test",
    "release": "release-it",
    "prepublish:npm": "pnpm build && pnpm changelog | pbcopy",
    "publish:npm": "lerna publish",
    "prepublish:next": "pnpm build",
    "publish:next": "lerna publish --dist-tag next",
    "prepack": "pinst --disable",
    "postinstall": "husky",
    "postpack": "pinst --enable",
    "prepare": "husky"
  },
  "author": {
    "name": "Goastro",
    "email": "guo.yansong.ngy@gmail.com",
    "url": "https://goastro.website/"
  },
  "license": "MIT",
  "engines": {
    "node": "22"
  },
 
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@commitlint/prompt-cli": "^19.0.3",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.0.0",
    "@nestjs/cli": "11.0.5",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "10.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "22.13.11",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "16.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "15.2.2",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "release-it": "18.1.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "pnpm test --bail --findRelatedTests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinEdry/nestjs-trpc"
  },
  "packageManager": "pnpm@8.15.4"
}
